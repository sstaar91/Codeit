{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@_asset/*": ["src/assets/*"],
      "@_component/*": ["src/components/*"],
      "@_context/*": ["src/contexts/*"],
      "@_hook/*": ["src/hooks/*"],
      "@_lib/*": ["src/lib/*"],
      "@_page/*": ["src/pages/*"],
      "@_provider/*": ["src/providers/*"],
      "@_service/*": ["src/service/*"],
      "@_style/*": ["src/styles/*"],
      "@_type/*": ["src/types/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
